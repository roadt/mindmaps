{
	"compilerOptions": {
		"target": "es5",
		"strict": true,
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"typeRoots": ["node_modules/@types", "typings"],
		"lib": ["es2015", "dom"]
	},
	"include": [
		"js/**/*.ts"
	]
}
